*,
*::before,
*::after
	box-sizing border-box

:root
	/* Themes */
	--secondary #666

	/* Variables */
	--fg #333
	--bg #fff

	--heading-fg #000
	--link #0169ec

	/* Paddings */
	--padding-top    30px
	--padding-bottom 30px
	--padding-right  20px
	--padding-left   20px
	--max-width 620px

	/* Box shadow */
	--box-shadow 0 0 0px 3px #bac7d4

/* Dark Mode */
@media (prefers-color-scheme dark)
	:root
		--secondary #8e8e8e
		--fg #a0a0a0
		--bg #030f1b
		--heading-fg #fff
		--link #fff

html
	font-family system-ui, /* macOS 10.11-10.12 */ -apple-system, /* Windows 6+ */ "Segoe UI", /* Android 4+ */ "Roboto", /* Ubuntu 10.10+ */ "Ubuntu", /* Gnome 3+ */ "Cantarell", /* KDE Plasma 5+ */ "Noto Sans", /* fallback */ sans-serif, /* macOS emoji */ "Apple Color Emoji", /* Windows emoji */ "Segoe UI Emoji", /* Windows emoji */ "Segoe UI Symbol", /* Linux emoji */ "Noto Color Emoji"
code,
kbd,
samp,
pre
	font-family /* macOS 10.10+ */ "Menlo", /* Windows 6+ */ "Consolas", /* Android 4+ */ "Roboto Mono", /* Ubuntu 10.10+ */ "Ubuntu Monospace", /* KDE Plasma 5+ */ "Noto Mono", /* KDE Plasma 4+ */ "Oxygen Mono", /* Linux/OpenOffice fallback */ "Liberation Mono", /* fallback */ monospace, /* macOS emoji */ "Apple Color Emoji", /* Windows emoji */ "Segoe UI Emoji", /* Windows emoji */ "Segoe UI Symbol", /* Linux emoji */ "Noto Color Emoji"

html,
body
	padding 0
	margin 0
	font-size 18px
	color var(--fg)
	background-color var(--bg)
	scroll-behavior smooth

/* Headings */
h1,
h2,
h3,
h4,
h5
	margin 0 0 1rem 0
	font-weight 500
	line-height 1.3
	color var(--heading-fg)
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

h4:not(:first-child),
h5:not(:first-child)
	margin 0 0 1rem 0

/* Increased margin on additional headings */
h1:not(:first-child),
h2:not(:first-child),
h3:not(:first-child)
	margin-top 1.5rem

