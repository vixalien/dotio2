/* inline code */
code
	padding 0 5px
	font-size 0.9em
	border 1px solid
	border-radius 5px

pre code
	display block
	padding 10px
	border-radius 0
	color #b2b6bb
	background-color #0a1826

.description p, p.description
	color var(--secondary)
	font-weight 400
	// font-size 1.5rem

hr
	margin 0
	border 0
	border-top 1px solid var(--secondary)

/* links */
a
	color inherit
	text-decoration none
	border 0
	border-bottom 1px solid transparent
a:hover
	text-decoration none
	color var(--link)
	border-bottom-color currentColor

main a
	border-bottom 2px solid var(--link)
	font-weight 500

main a:hover
	color var(--link)

